{
  "name": "rusdi-barber-be",
  "version": "1.0.0",
  "description": "Barber Shop API with Node.js, Express, and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "node dist/seeders/run.js",
    "seed:fresh": "node dist/seeders/run.js --clear --yes",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate",
    "db:studio": "npx drizzle-kit studio",
    "deploy:check": "node deploy-check.js",
    "deploy:package": "node create-deployment-package.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "barber",
    "booking",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@esbuild/linux-x64": "^0.25.12",
    "@paralleldrive/cuid2": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^6.10.1",
    "uuid": "^9.0.1",
    "drizzle-kit": "^0.31.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/cron": "^2.4.0",
    "@types/express": "^5.0.4",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^6.4.21",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
